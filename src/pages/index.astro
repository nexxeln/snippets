---
import { getCollection } from "astro:content";
import Head from "../components/Head.astro";
import Snippet from "../components/Snippet.astro";

const entries = await getCollection("snippets");
---

<html lang="en">
  <Head
    title="nexxel • snippets"
    description="nexxel likes these code snippets"
  />
  <body>
    <h1 class="text-(2xl #e5e5e5) font-black pt-4 pb-10">nexxel • snippets</h1>
    <div class="flex flex-col gap-y-6 px-4">
      {
        entries.map(({ data: { description, language, title }, slug }) => (
          <Snippet
            description={description}
            language={language}
            title={title}
            slug={slug}
          />
        ))
      }
    </div>
  </body>
</html>
